<shortcuts>
    <skipIfNotSupported />
    <programGroup defaultName="${project.custom.name} ${project.custom.version}"
        location="startMenu" />
    <shortcut
       name="Start ${project.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$JAVA_HOME\bin\java"
     commandLine="-Dlog4j.configuration=file:///&quot;$INSTALL_PATH&quot;/etc/log4j.properties -jar &quot;$INSTALL_PATH&quot;/lib/${project.artifactId}-${project.version}-jar-with-dependencies.jar"
     workingDirectory="$INSTALL_PATH"
     description="Start ${project.custom.name}. ${project.custom.description}"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH/${project.custom.icon.windows}">
        <createForPack name="Windows run files" />
    </shortcut>
    <shortcut
       name="Debug ${project.custom.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$JAVA_HOME\bin\java"
     commandLine="-Dlog4j.configuration=file:///&quot;$INSTALL_PATH&quot;/etc/debug-log4j.properties -jar &quot;$INSTALL_PATH&quot;/lib/${project.artifactId}-${project.version}-jar-with-dependencies.jar"
     workingDirectory="$INSTALL_PATH"
     description="Start debug mode of ${project.custom.name}. ${project.custom.description}"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH/${project.custom.icon.windows}">
        <createForPack name="Windows run files" />
    </shortcut>
    <shortcut
       name="Readme file"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;$INSTALL_PATH&quot;\doc\en\readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH\doc\en"
     description="${project.custom.name} readme file"
     type="Link"
     encoding="UTF-8">
        <createForPack name="Doc-English" />
    </shortcut>
    <shortcut
       name="Documentation ${project.version}"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;$INSTALL_PATH&quot;/doc/en/documentation-${project.custom.version}.pdf"
     commandLine=""
     workingDirectory="$INSTALL_PATH/doc/en"
     description="${project.custom.name} documentation for version ${project.custom.version}."
     type="link"
     mimetype="application/pdf"
     encoding="UTF-8">
        <createForPack name="Doc-English" />
    </shortcut>
    <shortcut
       name="Liemich Datei"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;$INSTALL_PATH&quot;\doc\de\readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH\doc\de"
     description="${project.custom.name} liesmich Datei"
     type="Link"
     encoding="UTF-8">
        <createForPack name="Doc-Deutsch" />
    </shortcut>
</shortcuts>
