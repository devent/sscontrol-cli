<shortcuts>
    <skipIfNotSupported />
    <programGroup defaultName="${project.custom.name} ${project.custom.version}"
        location="startMenu" />
    <shortcut
       name="Start ${project.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH/bin/linux/run.sh"
     commandLine=""
     workingDirectory="$INSTALL_PATH/bin/linux"
     description="Start ${project.custom.name}. ${project.custom.description}"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH/${project.custom.icon.unix}">
        <createForPack name="Linux run files" />
    </shortcut>
    <shortcut
       name="Debug Mode ${project.custom.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH/bin/linux/debug-run.sh"
     commandLine=""
     workingDirectory="$INSTALL_PATH/bin/linux"
     description="Start debug mode of ${project.custom.name}. ${project.custom.description}"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="$INSTALL_PATH/${project.custom.icon.unix}">
        <createForPack name="Linux run files" />
    </shortcut>
    <shortcut
       name="Readme file"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     url="$INSTALL_PATH/doc/en/readme.txt"
     target="$INSTALL_PATH/doc/en/readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH/doc/en"
     description="${project.custom.name} readme file"
     type="link"
     mimetype="text/plain"
     encoding="UTF-8">
        <createForPack name="Doc-English" />
    </shortcut>
    <shortcut
       name="Documentation ${project.custom.version}"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     url="$INSTALL_PATH/doc/en/documentation-${project.custom.version}.pdf"
     target="$INSTALL_PATH/doc/en/documentation-${project.custom.version}.pdf"
     commandLine=""
     workingDirectory="$INSTALL_PATH/doc/en"
     description="${project.custom.name} documentation for version ${project.custom.version}."
     type="link"
     mimetype="application/pdf"
     encoding="UTF-8">
        <createForPack name="Doc-English" />
    </shortcut>
    <shortcut
       name="Liemich Datei"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     url="$INSTALL_PATH/doc/de/readme.txt"
     target="$INSTALL_PATH/doc/de/readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH/doc/de"
     description="${project.custom.name} liesmich Datei"
     type="link"
     mimetype="text/plain"
     encoding="UTF-8">
        <createForPack name="Doc-Deutsch" />
    </shortcut>
</shortcuts>
